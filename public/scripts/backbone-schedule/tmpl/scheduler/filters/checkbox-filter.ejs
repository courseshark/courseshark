<div class="attribute">
	<div class="row-fluid">
		<fieldset>
			<legend><%= name %></legend>
			<% if ( horizontal ){ %>
				<div class="days span24">
						<div class="span1"/>
						<% for (var i=0,_len=options.length,enabled=values[0]; i<_len; i++,enabled=values[i] ){ %>
						<div class="option span4">
							<label for="checkbox-<%=name%>-<%=options[i]%>"><%=options[i]%></label>
							<input class="checkbox" type="checkbox" name="<%=name%>" id="checkbox-<%=name%>-<%=options[i]%>" value="<%=options[i]%>"<%=(enabled?' checked':'')%>/>
						</div>
						<%}%>
						<div class="span1"/>
				</div>
			<%} else {%>
				<% for (var i=0,_len=options.length,enabled=values[0]; i<_len; i++,enabled=values[i]  ){ %>
				<div class="row-fluid">
					<div class="seats span24">
						<div class="span2 offset2">
							<input class="checkbox" type="checkbox" name="<%=options[i]%>" id="checkbox-<%=name%>-<%=options[i]%>" value="<%=options[i]%>"<%=(enabled?' checked':'')%>/>
						</div>
						<div class="span20">
							<label for="checkbox-<%=name%>-<%=options[i]%>" title="<%=options[i]%>"><%=options[i]%></label>
						</div>
					</div>
				</div>
				<%}%>
			<%}%>
		</fieldset>
	</div>
</div>